{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "process",
            "label": "8CHIP",
            "command": "C:\\MinGW\\bin\\gcc.exe",
            "args": [
                "-g",
                "src\\*.c",
                "-o",
                "build\\8chip.exe",
                "-Iext/sdl2/include/SDL2",
                "-Lext/sdl2/lib",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
    ]
}